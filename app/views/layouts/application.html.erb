<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@200;300;400;500&display=swap" rel="stylesheet">
    <title>Proyecto Prototipado</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
  <body>
    <nav class="navbar">
      <h2 class="letra"><%= link_to 'Proveedores UC', root_path, class: "arreglo" %></h2>
        <ul>
          <% if current_user %>
                <li><%= link_to 'Ver Ingredientes', cars_path, class: "navbar ul li a" %></li>
              <% if (current_user.role == 'Proveedor' or current_user.admin == true) %>
                <li><%= link_to 'Hacer PublicaciÃ³n', new_car_path, class: "navbar ul li a" %></li>
              <% end %>
            <li><%= link_to 'Chats', conversaciones_path, class: "navbar ul li a" %></li>
            <li><%= link_to 'Actualizar perfil', edit_user_registration_path, class: "navbar ul li a" %></li>
            <li><%= link_to 'Cerrar sesion', destroy_user_session_path, method: :delete, class: "navbar ul li a" %></li>
          <% else %>
            <li><%= link_to 'Registrarse', new_user_registration_path, class: "navbar ul li a" %></li>
            <li><%= link_to 'Iniciar sesion', new_user_session_path, class: "navbar ul li a" %></li>
          <% end %>
      </ul>
    </nav>
      <% if notice != nil %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% end %>
      <% if alert != nil %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= alert %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% end %>
    <%= yield %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  </body>
</html>
